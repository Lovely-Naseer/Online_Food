<script>

    // Function to Open Payment Modal
    function openPaymentModal(itemName, price) {
    document.getElementById("selectedItem").innerHTML = `<strong>Item:</strong> ${itemName}`;
    document.getElementById("itemPrice").innerHTML = `<strong>Price:</strong> RS.${price}`;
    document.getElementById("quantity").value = 1; // Default quantity
    document.getElementById("totalAmount").innerHTML = `<strong>Total:</strong> RS.${price}`;
    
    document.getElementById("paymentModal").style.display = "flex";
}

// Update total price when quantity changes
function updateTotal(price) {
    let quantity = document.getElementById("quantity").value;
    let total = price * quantity;
    document.getElementById("totalAmount").innerHTML = `<strong>Total:</strong> RS.${total}`;
}

// Handle payment method selection
document.getElementById("paymentMethod").addEventListener("change", function () {
    let method = this.value;
    document.getElementById("upiSection").style.display = method === "upi" ? "block" : "none";
    document.getElementById("cardSection").style.display = method === "card" ? "block" : "none";
});

// Process payment
function processPayment() {
    let method = document.getElementById("paymentMethod").value;
    let upiId = document.getElementById("upiId").value;
    let cardNumber = document.getElementById("cardNumber").value;

    if (method === "upi" && upiId.trim() === "") {
        alert("Please enter a valid UPI ID.");
        return;
    }
    if (method === "card" && cardNumber.trim().length !== 12) {
        alert("Please enter a valid 12-digit card number.");
        return;
    }

    // Close payment modal and show success message
    closeModal("paymentModal");
    setTimeout(() => {
        document.getElementById("successModal").style.display = "flex";
    }, 500);
}

// Close modal function
function closeModal(modalId) {
    document.getElementById(modalId).style.display = "none";
}

    </script>
    <script>
        function processPayment(itemName, itemPrice, quantity, totalAmount, paymentMethod) {
    let itemName = document.getElementById("selectedItem").innerText.replace("Item: ", "");
    let itemPrice = document.getElementById("itemPrice").innerText.replace("Price: RS.", "");
    let quantity = document.getElementById("quantity").value;
    let totalAmount = document.getElementById("totalAmount").innerText.replace("Total: RS.", "");
    let paymentMethod = document.getElementById("paymentMethod").value;

    // Create order object
    let orderDetails = {
        item: itemName,
        price: itemPrice,
        quantity: quantity,
        total: totalAmount,
        payment: paymentMethod
    };

    // Store order details in localStorage
    let orders = JSON.parse(localStorage.getItem("orders")) || [];
    orders.push(orderDetails);
    localStorage.setItem("orders", JSON.stringify(orders));

    // Close the payment modal
    closeModal('paymentModal');

    // Show success message
    document.getElementById("successModal").style.display = "flex";

    // Redirect to orders page after 2 seconds
    setTimeout(() => {
        window.location.href = "/orders";
    }, 2000);
}

    </script>    

